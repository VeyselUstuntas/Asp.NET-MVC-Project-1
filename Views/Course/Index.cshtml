@model IEnumerable<Candidate>

@if (Model.Count() > 0)
{
    <h6 class="display-6">Applications (@Model.Count())</h6>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Full Name</th>
                <th scope="col">Apply At</th>
                <th scope="col">Course</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model)
            {
                <tr>
                    <th>@candidate.Email</th>
                    <th>@candidate.FullName</th>
                    <th>@candidate.ApplyAt</th>
                    <th>@candidate.SelectedCourse</th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        There is no applicaation. Please click here to <a class="alert-link" asp-action="Apply">apply</a>.
    </div>
}