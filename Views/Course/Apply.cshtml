@model Candidate

<div class="display-6">Apply</div>

<form>
    <div class="form-group my-2">
        <label>Email</label>
        <input class="form-control" name="Email" type="email">
    </div>

    <div class="form-group my-2">
        <label>Firstname</label>
        <input class="form-control" name="Firstname" type="text">
    </div>

    <div class="form-group my-2">
        <label>Lastname</label>
        <input class="form-control" name="Lastname" type="text">
    </div>

    <div class="form-group my-2">
        <label>Age</label>
        <select name="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" name="SelectedCourse" value="ASP.NET Core MVC"></input>
            <label for="mvc">ASP.NET Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" name="SelectedCourse" value="ASP.NET Core API"></input>
            <label for="api">ASP.NET Core API</label>
        </p>
        <p>
            <input id="blazor" type="radio" name="SelectedCourse" value="Blazor"></input>
            <label for="blazor">Blazor</label>
        </p>
    </fieldset>

    <div>
        <Button class="btn btn-primary" type="submit">Apply</Button>
        <a class="btn btn-warning" href="/">Home</a>
    </div>

</form>